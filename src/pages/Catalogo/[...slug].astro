---
import Layout from '../../layouts/Layout.astro';
export async function getStaticPaths() {
  const pages = [
  {
    img: "/images/Pulsera.jpg",
    nombre: "Prueba",
    precio: 0 ,
    precioDescuento: 0 , 
    descripcion: "Lorem ipsum dolor sit amet consectetur adipisicing elit. Eos eius eum reprehenderit dolore vel mollitia optio consequatur hic asperiores inventore suscipit, velit  consequuntur, voluptate doloremque iure necessitatibus adipisci magnam porro",
    categoria: "Oro",
    material: " Oro",
    Color: "Dorado",
    slug:"Dorado"
  },
  
];
  return pages.map(({  slug, img , nombre , precio , precioDescuento , descripcion ,  categoria , material, Color }) => {
    return {
      params: {slug},
      props: { img , nombre , precio , precioDescuento , descripcion ,  categoria , material, Color },
    };
  });
  
}
const { img , nombre , precio , precioDescuento , descripcion ,  categoria , material, Color } = Astro.props;

